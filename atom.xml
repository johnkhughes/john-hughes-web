---
layout: null
permalink: /atom.xml
---
<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">

    <title>{{ site.title | markdownify | strip_html | strip_newlines }}</title>
    <link href="{{ site.url }}/" />
    <link href="{{ site.url }}/atom.xml" rel="self" />
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url | markdownify | strip_html | strip_newlines }}/</id>
    <author>
        <name>{{ site.title }}</name>
    </author>

{% for post in site.posts limit: 10 %}
    <entry>
        <title>{{ post.title | markdownify | strip_html | strip_newlines }}</title>
        <link href="{{ site.url }}{{ post.url }}" />
        <id>{{ site.url }}{{ post.url }}</id>
        <published>{{ post.date | date_to_xmlschema }}</published>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <author>
            <name>{{ site.title }}</name>
        </author>
        <summary>{{ post.excerpt | markdownify | strip_html | strip_newlines }}</summary>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
{% endfor %}

</feed>
